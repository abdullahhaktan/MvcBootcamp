@model EntityLayer.Concrete.Writer

@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Yazar Ekleme</h1>
<br />
@using (Html.BeginForm("EditWriter", "Writer",FormMethod.Post))
{
    <div class="form-group">

        @Html.HiddenFor(model => model.WriterID)

        @Html.Label("Yazar Adı")
        @Html.TextBoxFor(w => w.WriterName, new { @class = "form-control", placeholder = "Yazar Adı" })
        @Html.ValidationMessageFor(w => w.WriterName)
        <br />
        @Html.Label("Yazar Soyadı")
        @Html.TextBoxFor(w => w.WriterSurname, new { @class = "form-control", placeholder = "Yazar Soyadı" })
        @Html.ValidationMessageFor(w => w.WriterSurname)
        <br />
        @Html.Label("Yazar Resim URL")
        @Html.TextBoxFor(w => w.WriterImage, new { @class = "form-control", placeholder = "Yazar Resim URL" })
        @Html.ValidationMessageFor(w => w.WriterImage)
        <br />
        @Html.Label("Yazar E-Posta")
        @Html.TextBoxFor(w => w.WriterMail, new { @class = "form-control", placeholder = "Yazar E-Posta" })
        @Html.ValidationMessageFor(w => w.WriterMail)
        <br />
        @Html.Label("Yazar Şifre")
        @Html.PasswordFor(w => w.WriterPassword, new { @class = "form-control", placeholder = "Yazar Şifre" })
        @Html.ValidationMessageFor(w => w.WriterPassword)
        <br />
        @Html.Label("Yazar Hakkında")
        @Html.TextAreaFor(w => w.WriterAbout, new { @class = "form-control", placeholder = "Yazar Hakkında" })
        @Html.ValidationMessageFor(w => w.WriterAbout)
        <br />
        @Html.Label("Yazar Başlığı")
        @Html.TextAreaFor(w => w.WriterTitle, new { @class = "form-control", placeholder = "Yazar Başlığı" })
        @Html.ValidationMessageFor(w => w.WriterTitle)
        <br />
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
}